---
pagination:
  data: collections
  size: 1
  alias: tag
  addAllPagesToCollections: false
  filter:
    - all
    - post
    - frontposts
eleventyComputed:
  title: "{{ tag | safe }}"
permalink: /tags/{{ tag | slugifyTag }}/
---

{% extends 'page.njk' %}

{% block body %}
  <p class="text-center text-lg italic m-6">Posts filtered by
    <strong>{{tag}}</strong>
  </p>
  {% set tags = collections[tag] | reverse %}
  {% include "tag-list.njk" %}
{% endblock %}