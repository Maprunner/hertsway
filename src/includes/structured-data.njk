{% if image %}
  {% set ldimage = [
    site.url, "/images/" | url,
    name,
    "/",
    image
  ] | join | replace(".jpg", "-1200.jpg") %}
{% else %}
  {% set ldimage = [site.url, "/images/hway-sign.jpg" | url] | join %}
{% endif %}
{% if title %}
  {% set headline = title %}
{% else %}
  {% set headline = site.name %}
{% endif %}
<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": "{{ headline }}",
    "image": ["{{ ldimage }}"],
    "datePublished": "{{ date }}",
    "dateModified": "{{ date }}"
  }
</script>