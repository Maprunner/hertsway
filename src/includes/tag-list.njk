<div class="mt-4 mx-auto grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
  {% for tag in tags %}
    <div class="flex flex-col flex-1 bg-gray-300 dark:bg-gray-800 px-4 py-2 rounded-lg shadow-lg">
      <div class="flex-1">
        <h1>
          <a class="block" href="{{ tag.url | url }}">{{ tag.data.title }}</a>
        </h1>
        <span class="created-date" datetime="{{ tag.data.date }}">
          {{ tag.data.date | dateDisplay }}
        </span>
        <p class="italic mb-2">{{ tag.data.excerpt }}</p>
        {% for tag in tag.data.tags %}
          {% if tag !== "tag" %}
            {% if tag !== "post" %}
              <a class="tag" href="{{ ['/tags/', tag | slugifyTag] | join | url }}">{{ tag }}</a>
            {% endif %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>