<div>
  {% for tag in tags %}
    <div class="flex flex-col flex-1 px-4 py-4 my-4 bg-gray-800 rounded-lg shadow-lg">
      <div class="flex-1">
        <h1>
          <a class="block" href="{{ tag.url | url }}">{{ tag.data.title }}</a>
        </h1>
        <span class="created-date" datetime="{{ tag.data.date }}">
          {{ tag.data.date | dateDisplay }}
        </span>
        <p class="italic">{{ tag.data.excerpt }}</p>
        {% for tag in tag.data.tags %}
          {%- if tag !== "tag" -%}
            <a class="tag {{ tag | replace('.', '') }}" href="{{ site.baseUrl }}tags/{{ tag }}">{{ tag }}</a>
          {%- endif -%}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>