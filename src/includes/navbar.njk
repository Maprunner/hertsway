<nav class="flex items-center justify-between flex-wrap lg:flex-nowrap py-2 w-full z-10 sticky">
  <div class="flex flex-nowrap justify-between w-full lg:w-auto">
    <div class="flex items-center truncate text-white mr-6">
      <a class="text-yellow-600 dark:text-yellow-600 truncate no-underline hover:text-white hover:no-underline" href="{{ '/' | url }}">
        <span class="text-sm md:text-base lg:text-lg xl:text-xl">There and Back on the Hertfordshire Way</span>
      </a>
    </div>
    <div class="block lg:hidden">
      <button id="nav-toggle" class="flex items-center px-3 py-2 border rounded text-grey border-grey-dark hover:text-white hover:border-white">
        <svg class="h-3 w-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="white">
          <title>Menu</title><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>
  <div class="w-full flex-grow hidden lg:flex  pt-6 lg:pt-0" id="nav-content">
    <ul class="list-reset lg:flex justify-end flex-1 items-end">
      {% for item in nav.main %}
        <li>
          <a class="inline-block pl-4 text-teal-500 dark:text-teal-500" href="{{ [site.baseUrl, item.url | url] | join }}">{{ item.label }}</a>
        </li>
      {% endfor %}
      <li class="pl-4">
        <img id="color-scheme-toggle" class="cursor-pointer" width="24px" src="{{ '/images/light.svg' | url }}" alt="toggle light mode"></li>
      </li>
    </ul>
  </div>
</nav>